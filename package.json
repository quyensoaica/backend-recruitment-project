{
  "name": "backend-recruiment-project",
  "version": "1.0.0",
  "description": "backend recruiment project",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "clean": "rm -rf build && mkdir build",
    "build-babel": "babel ./src -d ./build/src",
    "build": "npm run clean && npm run build-babel",
    "production": "npm run build && node ./build/src/index.js",
    "start": "nodemon -r tsconfig-paths/register ./src/index.ts",
    "dev": "nodemon -r tsconfig-paths/register ./src/index.ts",
    "typeorm": "typeorm-ts-node-commonjs",
    "migration:run": "ts-node ./node_modules/typeorm/cli.js migration:run -d ./src/data-source.ts",
    "migration:revert": "ts-node ./node_modules/typeorm/cli.js migration:revert -d ./src/data-source.ts",
    "schema:sync": "npm run typeorm schema:sync -- -d src/data-source.ts",
    "migration:show": "npm run typeorm migration:show -- -d src/data-source.ts",
    "migration:generate": "npm run typeorm migration:generate -- -d src/data-source.ts",
    "migration:create": "npm run typeorm migration:create"
  },
  "keywords": [
    "recruiment"
  ],
  "author": "quyensoaica",
  "license": "ISC",
  "dependencies": {
    "@babel/runtime": "^7.25.4",
    "@sequelize/postgres": "^7.0.0-alpha.41",
    "@types/express": "^4.17.21",
    "@types/sequelize": "^4.28.20",
    "async-exit-hook": "^2.0.1",
    "body-parser": "^1.20.2",
    "cjs-loader": "^0.1.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "http-status-codes": "^2.3.0",
    "joi": "^17.13.3",
    "nodemon": "^3.1.4",
    "pg": "^8.12.0",
    "pg-hstore": "^2.3.4",
    "reflect-metadata": "^0.2.2",
    "sequelize": "^6.37.3",
    "sequelize-cli": "^6.6.2",
    "typeorm": "^0.3.20",
    "typescript": "^5.5.4"
  },
  "devDependencies": {
    "@babel/cli": "^7.24.8",
    "@babel/core": "^7.25.2",
    "@babel/eslint-parser": "^7.25.1",
    "@babel/node": "^7.25.0",
    "@babel/plugin-transform-runtime": "^7.25.4",
    "@babel/preset-env": "^7.25.4",
    "@types/async-exit-hook": "^2.0.2",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/node": "^22.5.1",
    "eslint": "^9.9.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0"
  }
}
